<div class="container">
  <div class="index-header">
    <h1>Task Manager</h1>
  </div>
  <div class="index-body">
    <p id="add"><%= link_to '<i class="fas fa-plus"></i>'.html_safe, new_path %></p>
    <h4>Current Tasks</h4>
    <div class="row">
      <div class="cells">
        <% @task.each do |x| %>
          <div class="col-xs-12 col-md-3" id="cell">

            <% if x[:completed] %>
              <i class="far fa-check-circle"></i>
            <% else %>
              <i class="far fa-circle"></i>
            <% end %>

            <h4><%= link_to x[:title], task_path(x) %></h4>

            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, delete_path(x),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

